  <!-- JS 控制輪播 -->
  <script>
    let currentSlide = 0;

    function moveSlide(step) {
      const track = document.getElementById('carouselTrack');
      const slides = track.children.length;
      currentSlide = (currentSlide + step + slides) % slides;
      track.style.transform = `translateX(-${currentSlide * 100}%)`;
    }
  </script>
